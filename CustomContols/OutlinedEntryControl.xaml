<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             RowDefinitions="50"
             x:Name="this"
             x:Class="AppFinancias.CustomContols.OutlinedEntryControl">
    <Frame Grid.Row="0" Padding="8" BorderColor="Gray" BackgroundColor="Transparent" >
        <Entry Text="{Binding Source={x:Reference this}, Path=}" TextColor="White"/>
    </Frame>
    <Label Grid.Row="0" Margin="10, 0, 10, 0" TextColor="Gray" BackgroundColor="Transparent" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" Text="First Name" />
</Grid>

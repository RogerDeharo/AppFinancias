<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFinancias.MainPage"
             BackgroundColor="White"
             Title="">

    <Grid RowDefinitions="120, *">
        <Border Grid.Row="2" BackgroundColor="#191A32" HeightRequest="300"
                Stroke="#191A32" StrokeThickness="1" VerticalOptions="End" Margin="-10, 0, -10, -10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="55, 55, 0, 0"/>
            </Border.StrokeShape>
            <StackLayout HorizontalOptions="FillAndExpand" Margin="0 ,150, 0, 0" Spacing="10" Padding="50, 0">
                <Button Text="Criar Conta" Clicked="btn_criarconta_Clicked" HorizontalOptions="FillAndExpand"/>
                <Button Text="Login" Clicked="btn_criarconta_Clicked" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </Border>
    </Grid>

</ContentPage>
